---
const personalImageAlt = "David Torrez";
import GithubIcon from "../components/icons/Github.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import ResumeIcon from "../components/icons/Resume.astro";
import Badge from "./Badge.astro";
import SocialPill from "./SocialPill.astro";
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-20 aspect-auto object-cover"
      src="/picture-3.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/david-torrez"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Available to work</Badge>
    </a>
  </div>
  <h1
    class="text-3xl xs:text-4xl sm:text-5xl font-bold tracking-tight text-gray-800 dark:text-white"
  >
    Hey, I'm David Torrez
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    Web Developer based in Vancouver, Canada. I focus on creating <strong
      >Responsive and User-friendly interfaces.</strong
    >
  </p>
  <nav class="flex flex-nowrap gap-x-2 mt-8">
    <SocialPill href="https://github.com/DavidTM96">
      <GithubIcon class="size-4" />
      GitHub
    </SocialPill>

    <SocialPill href="https://www.linkedin.com/in/david-torrez">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>

    <SocialPill href="/resume.pdf">
      <ResumeIcon class="size-4" />
      Resume
    </SocialPill>
  </nav>
</div>
