---
const personalImageAlt = "David Torrez";
import GithubIcon from "../components/icons/Github.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import MailIcon from "../components/icons/Mail.astro";
import Badge from "./Badge.astro";
import SocialPill from "./SocialPill.astro";
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-18 bg-blue-400"
      src="/projects/profile.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/david-torrez"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Available to work</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hey, I'm David Torrez
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    Web Developer based in Vancouver, Canada. I focus on creating <strong
      >Responsive and User-friendly interfaces.</strong
    >
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="https://github.com/DavidTM96">
      <GithubIcon class="size-4" />
      GitHub
    </SocialPill>

    <SocialPill href="https://www.linkedin.com/in/david-torrez">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>

    <SocialPill href="mailto:dtorrez1996@gmail.com">
      <MailIcon class="size-4" />
      Contact me
    </SocialPill>
  </nav>
</div>
