---
const { t } = Astro.props;
import GithubIcon from "../components/icons/Github.astro";
import Link from "./icons/Link.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import LinkButton from "./LinkButton.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
};

const PROJECTS = [
  {
    title: "Up Immigration",
    description: t.projects.project2Description,
    link: "https://migration-crew-website.vercel.app/",
    github: "https://github.com/migration-crew/immigration-website",
    image: "/projects/up-immigration.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Real Outfit",
    description: t.projects.project1Description,
    link: "https://real-outfit-86dmsikw7-davidtm96s-projects.vercel.app/",
    github: "https://github.com/DavidTM96/real-outfit",
    image: "/projects/real-outfit.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Finance Tracker",
    description: t.projects.project3Description,
    link: "https://finance-m8.vercel.app/",
    github: "https://github.com/DavidTM96/finance-m8",
    image: "/projects/finance-tracker.webp",
    tags: [TAGS.NEXT],
  },
];
---

<div class="flex flex-col gap-y-16 projects-container">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }, index) => (
      <article
        class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0 project-item"
        style={`view-transition-name: project-${index}`}
      >
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50 h-full">
            <img
              alt="Recién llegado vs 5 años en Nueva Zelanda"
              class="object-cover object-top w-full h-full transition duration-500 md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GithubIcon class="size-6" />
                  {t.projects.codeButton}
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Demo
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>

<style>
  .projects-container {
    view-transition-name: projects-container;
  }

  /* Initial state - projects start invisible */
  .project-item {
    opacity: 0;
    transform: translateY(100px);
    transition:
      opacity 1.5s ease-out,
      transform 1.5s ease-out;
  }

  /* Animation classes that will be added via JavaScript */
  .project-item.animate {
    opacity: 1;
    transform: translateY(0);
  }

  .project-item:nth-child(1).animate {
    transition-delay: 0.3s;
  }

  .project-item:nth-child(2).animate {
    transition-delay: 0.3s;
  }

  .project-item:nth-child(3).animate {
    transition-delay: 0.3s;
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .project-item {
      opacity: 1;
      transform: translateY(0);
      transition: none;
    }
  }
</style>

<script>
  // Intersection Observer for scroll-triggered animations
  const observerOptions = {
    threshold: 0.3, // Trigger when 30% of the element is visible
    rootMargin: "0px 0px -50px 0px", // Start animation slightly before element enters viewport
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add("animate");
        // Once animation is triggered, stop observing
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  // Observe all project items
  document.addEventListener("astro:page-load", () => {
    const projectItems = document.querySelectorAll(".project-item");
    projectItems.forEach((item) => {
      observer.observe(item);
    });
  });
</script>
